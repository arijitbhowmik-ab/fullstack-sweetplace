<% layout("/layout/boilerplate") %>
<div class="row mt-3">
    <div class="col-lg-8 col-md-10 offset-lg-2 offset-md-1">
    <h1>Create new places</h1>
    <form method="POST" action="/listings" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="listing[title]" placeholder="Enter title" required>
            <div class="valid-feedback">
                Title looks good!
            </div>
            <div class="invalid-feedback">
                Please enter title. 
            </div>
        </div>
        
        <div class="mb-3">
            <label for="title" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" placeholder="Enter description" required></textarea>
            <div class="invalid-feedback">Please give short description</div>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Upload image (less than 200KB)</label>
            <input type="file" class="form-control" name="listing[image]" placeholder="Enter image URL" required>
        </div>
        <div class="row" class="mb-3">
            <div class="col-md-4 mb-3">
                <label for="title" class="form-label">Price</label>
                <input class="form-control" name="listing[price]" placeholder="Enter price here" required>
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            <div class="col-md-8 mb-3">
                <label for="title" class="form-label">Country</label>
                <input type="text" class="form-control" name="listing[country]" placeholder="Enter country" required>
                <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Location</label>
            <input type="text" class="form-control" name="listing[location]" placeholder="Enter location" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        <br>
        <button class="btn btn-dark add-btn">Add Places</button>
        <br><br><br>
    </form>
</div>
</div>